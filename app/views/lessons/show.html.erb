<main>
    <div class="text-center">
        <h1><%= @lesson.category.title %></h1>
    </div>
    <div class="text-center">
        <p>Correct Answer ...  <%= @lesson.result %> of <%= @lesson.words.count %></p>
    </div>
    <div class="container">
        <table class="table my-5">
            <thead class="h5">
                <tr>
                    <th class="pl-4 align-middle">Word</th>
                    <th class="pl-4">Your Answer</th>
                    <th class="pl-4">Correct Answer</th>
                    <th class="text-center align-middle" width="140">Result</th>
                </tr>
            </thead>
            <tbody>
                <% @answers.each do |answer| %>
                    <tr class="table-light">
                        <td class="align-middle">
                            <%= answer.word.content %>
                        </td>
                        <td class="align-middle">
                            <%= answer.choice.content %>
                        </td>
                        <td class="align-middle">
                            <%= answer.word.correct_answer %>
                        </td>
                        <td class="text-center">
                            <% if answer.choice.content == answer.word.correct_answer %>
                                <i class="fa-2x far fa-check-square mx-auto"></i>
                            <% else %>
                                <i class="fa-2x fas fa-times-circle mx-auto"></i>
                            <% end %>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
        <div class="paginate my-4">
            <%= will_paginate @answers, :previous_label => '&lt', :next_label => '&gt', inner_window: 2 %>
        </div>
    </div>
</main>
