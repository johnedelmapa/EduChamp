<div class="main-container">
    <div class="container">
        <div class="row">
            <div class="col-6 offset-6 main-form">
                <p class="free text-center mb-4"><span>Register</span></p>
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                    <div class="form-group">
                        <%= f.text_field :fullname, placeholder: " Fullname", class: "form-control form-design" %>
                    </div>

                    <div class="form-group">
                        <%= f.email_field :email, placeholder: " Email", class: "form-control form-design" %>
                    </div>

                    <div class="form-group">
                        <%= f.password_field :password, placeholder: " Password", class: "form-control form-design" %>
                    </div>
                    
                    <%= f.submit "Create an account", class: "primary-button" %>
                    <%= link_to "Sign in with Facebook", "#", class: "facebook-button" %>
                    <small class="terms">By clicking the button, you are agreeing to our
                        <a href="#"> Terms and Services </a>
                    </small>
                <% end %>
            </div>
        </div>
    </div>
</div>