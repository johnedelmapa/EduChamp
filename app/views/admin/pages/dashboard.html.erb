<section id="breadcrumb" class="mt-4">
    <div class="container">
        <ol class="breadcrumb">
            <li class="active"><%= link_to "Dashboard", admin_dashboard_path, class: "text-decoration-none"%></li>
        </ol>
    </div>
</section>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="card">
            <div class="card-header">
                Dashboard
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><%= link_to "Users", admin_users_path, class: "text-dark text-decoration-none"%></li>
                <li class="list-group-item"><%= link_to "Categories", admin_categories_path, class: "text-dark text-decoration-none"%></li>
            </ul>
            </div>
        
        </div>
        <div class="col-md-9">
            <div class="card">
                <div class="card-header">
                    Website Overview
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card  dash-box">
                                <h3><span><i class="fa fa-user"></i></span> <%= @user_count %></h3>
                                <h5>Users</h5>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card  dash-box">
                                <h3><span><i class="fa fa-book"></i></span><%= @category_count %></h3>
                                <h5>Categories</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

             <div class="card mt-4">
                <div class="card-header">
                    Latest Users
                </div>
                <div class="card-body">
                    <table class="table table-striped table-hover">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Joined</th>
                        </tr>
                        <% @users.each do |user |%>
                        <tr>
                            <td><%= user.fullname%></td>
                            <td><%= user.email%></td>
                            <td><%= user.created_at.to_date.to_s %></td>
                        </tr>
                        <% end %>
                    </table>           
                </div>
            </div>
        </div>
    </div>
</div>
