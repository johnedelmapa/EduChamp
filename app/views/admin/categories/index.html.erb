<section id="breadcrumb" class="mt-4">
    <div class="container">
        <ol class="breadcrumb">
            <li class="active">
                <%= link_to "Dashboard", admin_dashboard_path, class: "text-decoration-none"%> >
                <%= link_to "Categories", admin_categories_path, class: "text-decoration-none"%>
            </li>
        </ol>
    </div>
</section>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="card">
            <div class="card-header">
                Dashboard
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><%= link_to "Users", admin_users_path, class: "text-dark text-decoration-none"%></li>
                <li class="list-group-item"><%= link_to "Categories", admin_categories_path, class: "text-dark text-decoration-none"%></li>
            </ul>
            </div>  
        </div>
        <div class="col-md-9">
             <div class="card">
                <div class="card-header">
                    Categories
                    <%= link_to "Create Category", new_admin_category_path, class:"btn btn-outline-primary float-right"%>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-hover">
                        <%= search_form_for [:admin, @search] do |f| %>
                            <%= f.search_field :title_cont, placeholder: "Search By Title", class: "form-control" %>
                        <% end %>
                        <tr>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Created at</th>
                            <th>Action</th>
                        </tr>
                        <% @categories.each do |category|%>
                        <tr>
                            <td><%= category.title%></td>
                            <td><%= category.description%></td>
                            <td><%= category.created_at.to_date.to_s %></td>
                            <td>
                                <%= link_to "Edit", edit_admin_category_path(category), class: "btn btn-outline-info w-80" %>
                                <%= link_to "Delete", admin_category_path(category), method: :delete, class: "btn btn-outline-danger w-80", data: { confirm: "Are you sure?" }%>
                            </td>
                        </tr>
                        <% end %>
                    </table>  
                    <div class="pagination justify-content-center my-3">
                        <%= will_paginate @categories %>
                    </div>         
                </div>
            </div>
        </div>
    </div>
</div>
