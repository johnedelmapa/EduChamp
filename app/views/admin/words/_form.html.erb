<%= form_for [:admin, @category, @word] do |f| %>
  <%= render "devise/shared/error_messages", resource: f.object %>
  <div class="form-group">
    <%= f.text_field :content, class: "form-control", placeholder: "Word"%>
  </div>

  <div class="form-group">
    <% label_tag "choices" %>
    <%= f.fields_for :choices do |choice|  %>
    <%= choice.text_field :content, class: "form-control rm-padding" %>
    <%= choice.check_box :correct, class: "d-inline" %>
    <p class="d-inline">This is the correct answer! </p>
    <% end %>
  </div>
    
  <div class="form-group">
      <%= f.submit msg, class: "btn btn-block btn-outline-primary"%>
  </div>
<% end %>

